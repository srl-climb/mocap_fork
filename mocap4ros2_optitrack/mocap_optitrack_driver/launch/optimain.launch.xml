<launch>
    <!-- Optitrack Client Script -->
    <include file="$(find-pkg-share mocap_optitrack_driver)/launch/optitrack2.launch.py"/>

    <!-- Transformations -->
    <include file="$(find-pkg-share mocap_optitrack_driver)/launch/tf_map_motive_origin.launch.py"/>
    
    <!-- Rviz2 -->
    <let name="rviz_config" value="/home/climb/tetherbot_ws/src/mocap4ros2_optitrack/mocap_optitrack_driver/config/tether-rviz.rviz"/>
    <node name="rviz2" pkg="rviz2" exec="rviz2" args="-d $(var rviz_config)"/>
    
    <!-- Script to convert data points into markers for Rviz -->
    <node pkg="mocap_marker_viz" exec="mocap_marker_viz" name="mocap_marker_viz"/>

</launch>